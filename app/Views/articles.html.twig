{% extends 'base.html.twig' %}

{% block body %}

    <h1 class="text-3xl pt-6 font-semibold text-center text-gray-800">
        Put your reading pants on
    </h1>

    <section class="relative pb-20 pt-8 overflow-hidden">
        <div class="relative container px-4 mx-auto">
            <div class="max-w-2xl mx-auto mb-15 pb-4 text-center">
                <h1 class="font-heading text-6xl font-bold">
                    <span>News &amp;</span>
                    <span class="font-serif italic">
                        Articles
                    </span>
                </h1>
            </div>

            <div class="flex justify-center mx-48">
                <div class="grid gap-8 grid-cols-2">
                    {% for article in articles %}
                        <div class="pt-8 border-t-2 border-gray-200 text-left">
                            <div class="flex flex-nowrap">
                                <div class="w-auto px-4">
                                    <img src="https://placehold.co/270x180" alt="">
                                </div>
                                <div class="w-full">
                                    <div class="max-w-2xl">
                                        <form action="/author" method="GET">
                                            <p class="text-gray-400 pb-1">
                                                Published by
                                                <button name="authorId" value="{{ article.author.id }}"
                                                        class="font-semibold hover:text-black">
                                                    {{ article.author.name }}
                                                </button>
                                            </p>
                                        </form>

                                        <form action="/article" method="GET">
                                            <button type="submit" name="articleId" value="{{ article.id }}"
                                                    class="text-left text-xl font-bold tracking-tight text-gray-900 hover:text-gray-600">
                                                {{ article.title|capitalize }}
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </section>

{% endblock %}